<div>
    <a href="/new" class="btn-large">Create New User</a>
</div>
{{#each users}}
<div class="row">
    <div class="col s16 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{name}}</span>
                <p>{{department}}</p>
                <p>{{tools}}</p>
            </div>
            <div class="card-action">
                <form>
                    <a href="/edit"><button class="btn">Update</button></a>
                </form>
                <form action="/{{newUserId}}?_method=DELETE" method="POST">
                    <button class="btn" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

{{/each}}