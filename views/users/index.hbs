<h1>Tool Checkout Log</h1>

{{#each showToolUsers}}
<div class="row">
    <div class="col s16 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{name}}</span>
                <p>{{createdAt}}</p>
                <p>{{department}}</p>
            </div>
            <div class="actionBar">
                <a href="{{../id}}/edit"><button class="btn">Update</button></a>
                <form action="../{{_id}}?_method=DELETE" method="POST">
                    <button class="btn" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}