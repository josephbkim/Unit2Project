{{#each showNotes}}
<div class="container">
    <div class="row">
        <div class="col s8 offset-s2">
            <div class="card green">
                <div class="card-content white-text">
                    <span class="card-title">Notes</span>
                    <p>{{createdAt}}</p>
                    <p>{{noteContent}}</p>
                </div>
                <div class="actionBar">
                    <form action="/{{../toolId}}/notes/{{this.id}}?_method=DELETE" method="POST">
                        <button class="btn green darken-2" type="submit">Delete</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
{{/each}}