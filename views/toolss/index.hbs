<div>
    <a href="/new" class="btn-large">Create New Tool</a>
</div>
{{#each invTools}}
<div class="row">
    <div class="col s16 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{toolName}}</span>
                <p>Brand: {{toolCo}}</p>
                <p>Model: {{toolModel}}</p>
                <p>Date Checked Out: {{checkOut}}</p>
                <p>Employee: {{employTag}}</p>
                <p>Note: {{note}}</p>
            </div>
            <div class="card-action">
                <a href="{{_id}}/show"> <button class=" btn">Check Out Tool</button></a>
            </div>
            <div class="card-action">
                <a href="{{_id}}/edit"> <button class=" btn">Update Tool</button></a>
            </div>
        </div>
    </div>
</div>

{{/each}}