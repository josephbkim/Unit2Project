<div>
    <a href="/tools/new" class="btn-large">Add New Tool</a>
</div>
{{#each tools}}
<div class="row">
    <div class="col s16 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">{{toolName}}</span>
                <p>{{toolCo}}</p>
                <p>{{toolModel}}</p>
                <p>{{checkOut}}</p>
                <p>{{notes}}</p>
            </div>
        </div>
    </div>
</div>

{{/each}}