<div class="container">
    <div class="row">
        <div class="col s8 offset-s2">
            <div class="card green">
                <div class="card-content white-text">
                    <span class="card-title">THIS IS THE TOOL EDIT PAGE</span>
                    <form action="/{{newToolId}}?_method=PATCH" method="POST">
                        <input type="text" name="toolName" placeholder="Tool Name" value="">
                        <input type="text" name="toolCo" placeholder="Brand" value="">
                        <input type="text" name="toolModel" placeholder="Model" value="">
                        <button class="btn green darken-2" type="submit">Update</button>
                    </form>
                    <div class="toolBtn">
                        <form action="/{{newToolId}}?_method=DELETE" method="POST">
                            <button class="btn green darken-2" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>